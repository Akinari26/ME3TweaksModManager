<Window x:Class="MassEffectModManager.modmanager.windows.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MassEffectModManager.modmanager.windows"
        xmlns:p="clr-namespace:MassEffectModManager.Properties"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Mod Manager Options" Height="450" Width="459">
    <StackPanel Margin="5">
        <CheckBox Content="Log Mod Startup" IsChecked="{Binding LogModStartup, 
                Mode=TwoWay, 
                Source={x:Static p:Settings.Default}, 
                UpdateSourceTrigger=PropertyChanged}"/>
        <CheckBox Content="Log MixinStartup Startup" IsChecked="{Binding LogMixinStartup, 
                Mode=TwoWay, 
                Source={x:Static p:Settings.Default}, 
                UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</Window>
