<UserControl x:Class="MassEffectModManagerCore.modmanager.usercontrols.ArchiveDeployment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MassEffectModManagerCore.modmanager.usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="20" FontWeight="Bold" Text="Prepare mod for distribution"/>
        <TextBlock Text="{Binding ModBeingDeployed.ModName}" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding ModBeingDeployed.ParsedModVersion, StringFormat='Version {0}'}" HorizontalAlignment="Center"/>

        <TextBlock Text="Deployment Checklist" FontSize="14" FontWeight="Bold"/>
        <TextBlock Text="Set correct mod version?"/>
        <TextBlock Text="Set the modsite URL?"/>
        <TextBlock Text="Ensured description accuracy?"/>
        <TextBlock Text="Compacted TFCs with TFC Compactor in ME3Explorer?"/>
        <TextBlock Text="Compacted AFCs with AFC Compactor in ME3Explorer?"/>

        <Button Content="Deploy" Command="{Binding DeployCommand}"/>
        <Button Content="Close" Click="Close_Clicked"/>
    </StackPanel>
</UserControl>
