<UserControl x:Class="MassEffectModManagerCore.modmanager.usercontrols.UpdateCompletedPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MassEffectModManagerCore.modmanager.usercontrols"
             mc:Ignorable="d" 
             Width="250"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="{Binding UpdateMessage}" FontWeight="Bold" FontSize="20" TextAlignment="Center"/>
        <TextBlock Text="{Binding UpdateMessage}"/>
        <Button Content="Close" Click="Close_Clicked" HorizontalAlignment="Right" Padding="4" Margin="0,40,0,0"/>
    </StackPanel>
</UserControl>
