<local:MMBusyPanelBase x:Class="MassEffectModManagerCore.modmanager.usercontrols.PreviewWelcomePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MassEffectModManagerCore.modmanager.usercontrols"
                       xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                       mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
                       MaxWidth="450">
    <StackPanel Margin="5">
        <TextBlock Text="{DynamicResource string_previewPanelTitle}" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
        <TextBlock TextWrapping="Wrap" Text="{DynamicResource string_previewPanelIntro}"/>

        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Column="0" HorizontalAlignment="Left">
                <TextBlock DockPanel.Dock="Top" Text="{DynamicResource string_selectYourLanguage}" TextAlignment="Center" FontSize="16" Margin="0,5,0,0" FontWeight="Bold"/>
                <Grid HorizontalAlignment="Center" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Column="0" Margin="2" Click="ChangeLang_DEU_Clicked">
                        <StackPanel>
                            <Image Source="/modmanager/localizations/icons/german.png"/>
                            <TextBlock Text="Deutsch" TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="1" Margin="2" Click="ChangeLang_INT_Clicked">
                        <StackPanel>
                            <Image Source="/modmanager/localizations/icons/english.png"/>
                            <TextBlock Text="English" TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="2" Margin="2" Click="ChangeLang_ESN_Clicked" IsEnabled="False" ToolTip="{DynamicResource string_tooltip_translationIsInProgressButIsNotYetAvailable}">
                        <StackPanel>
                            <Image Source="/modmanager/localizations/icons/spanish.png"/>
                            <TextBlock Text="Español" TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Row="1" Grid.Column="0" Margin="2" Click="ChangeLang_FRA_Clicked" IsEnabled="False" ToolTip="{DynamicResource string_tooltip_translationIsInProgressButIsNotYetAvailable}">
                        <StackPanel>
                            <Image Source="/modmanager/localizations/icons/french.png"/>
                            <TextBlock Text="Français" TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Row="1" Grid.Column="1" Margin="2" Click="ChangeLang_POL_Clicked" IsEnabled="False" ToolTip="{DynamicResource string_tooltip_translationIsInProgressButIsNotYetAvailable}">
                        <StackPanel >
                            <Image Source="/modmanager/localizations/icons/polish.png"/>
                            <TextBlock Text="Polski" TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Row="1" Grid.Column="2" Margin="2" Click="ChangeLang_RUS_Clicked">
                        <StackPanel>
                            <Image Source="/modmanager/localizations/icons/russian.png"/>
                            <TextBlock Text="Pусский" TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </Grid>
            </DockPanel>
            <DockPanel Grid.Column="1">
                <TextBlock DockPanel.Dock="Top" Text="Select your theme" TextAlignment="Center" FontSize="16" Margin="0,5,0,0" FontWeight="Bold"/>
                <Grid HorizontalAlignment="Center" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Column="0" Margin="2" Click="ChangeLang_DEU_Clicked">
                        <StackPanel>
                            <Image Source="/modmanager/localizations/icons/german.png"/>
                            <TextBlock Text="Light" TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Row="1" Margin="2" Click="ChangeLang_INT_Clicked">
                        <StackPanel>
                            <Image Source="/modmanager/localizations/icons/english.png"/>
                            <TextBlock Text="Dark" TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </DockPanel>

            <DockPanel Grid.Row="1" Grid.ColumnSpan="2">
                <TextBlock DockPanel.Dock="Top" Text="Mod library location" TextAlignment="Center" FontSize="16" Margin="0,5,0,0" FontWeight="Bold"/>
                <TextBlock DockPanel.Dock="Top" Text="Mods that are imported into Mod Manager will be stored at this location." TextAlignment="Center" Margin="0,5,0,0"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <xctk:WatermarkTextBox Watermark="Library location"/>
                    <Button Content="Browse" Grid.Column="1"/>
                </Grid>
                

            </DockPanel>
        </Grid>
        <TextBlock DockPanel.Dock="Bottom" Text="You can change your settings at any time through the Actions menu." TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">

            <Button Content="{DynamicResource string_joinDiscord}" Click="JoinDiscord_Click" Padding="7,4" Margin="4,0"/>
            <Button Content="{DynamicResource string_close}" Click="Close_Clicked" Padding="7,4"/>

        </StackPanel>
    </StackPanel>
</local:MMBusyPanelBase>
