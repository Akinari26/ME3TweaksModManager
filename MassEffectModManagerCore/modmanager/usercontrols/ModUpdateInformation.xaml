<UserControl x:Class="MassEffectModManagerCore.modmanager.usercontrols.ModUpdateInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MassEffectModManagerCore.modmanager.usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500" MaxHeight="500">
    <StackPanel>
        <TextBlock Text="{Binding TitleText, FallbackValue=Mod updates available}" FontWeight="Bold" TextAlignment="Center" FontSize="20"/>


        <Button Content="Close" Command="{Binding CloseCommand}"/>
            
    </StackPanel>
</UserControl>
