<UserControl x:Class="MassEffectModManager.modmanager.usercontrols.ModInstaller"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MassEffectModManager.modmanager.usercontrols"
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             Height="Auto" MinHeight="200" Width="300">
    <StackPanel VerticalAlignment="Center">
        <fa:ImageAwesome Icon="Spinner" Spin="True" SpinDuration="1" Width="32" Height="32" Foreground="Black" Margin="10"/>
        <TextBlock HorizontalAlignment="Center" FontSize="25" FontWeight="Light" Text="{Binding Percent, StringFormat='{}{0}%', FallbackValue=55%}" Visibility="{Binding PercentVisibility}"/>
        <TextBlock HorizontalAlignment="Center" FontSize="16" FontWeight="Light" Text="{Binding Action, FallbackValue=Installing Mod}" TextWrapping="Wrap" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" FontSize="14" FontWeight="Light" Text="{Binding mod.ModName, FallbackValue=SP Controller Support}" TextWrapping="Wrap" TextAlignment="Center"/>
    </StackPanel>
</UserControl>
