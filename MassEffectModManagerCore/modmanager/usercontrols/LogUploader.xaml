<UserControl x:Class="MassEffectModManagerCore.modmanager.usercontrols.LogUploader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MassEffectModManagerCore.modmanager.usercontrols"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             mc:Ignorable="d"
             Width="300">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding TopText, FallbackValue=Select a log to view on log viewing service}" TextAlignment="Center"></TextBlock>
        <xctk:WatermarkComboBox Grid.Row="2" Grid.Column="0"  Grid.ColumnSpan="2" Name="LogSelector_ComboBox" SelectedItem="{Binding SelectedLog}" ItemsSource="{Binding AvailableLogs}" Watermark="Select a log" Margin="0,5"/>
        <Button Grid.Row="3" Grid.Column="1" Content="Upload to log viewer" Command="{Binding UploadLogCommand}" Width="170"/>
        <Button Grid.Row="3" Grid.Column="0" Content="Cancel" Command="{Binding CancelUploadCommand}" Width="100" />
    </Grid>
</UserControl>
