<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <Platforms>AnyCPU;x64</Platforms>
    <AssemblyVersion>6.0.0.0</AssemblyVersion>
    <FileVersion>6.0.0.0</FileVersion>
    <Copyright>ME3Tweaks 2012-2019</Copyright>
    <Authors>Mgamerz</Authors>
    <PackageId>MassEffectModManagerCore</PackageId>
    <Product>Mass Effect Mod Manager</Product>
    <Description>Mod Manager for the original Mass Effect Trilogy</Description>
    <Company>ME3Tweaks</Company>
    <StartupObject>MassEffectModManagerCore.App</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="costura64\lzo2wrapper.dll" />
    <None Remove="costura64\sevenzipwrapper.dll" />
    <None Remove="costura64\zlibwrapper.dll" />
    <None Remove="images\gameicons\ME1_48.ico" />
    <None Remove="images\gameicons\ME2_48.ico" />
    <None Remove="images\gameicons\ME3_48.ico" />
    <None Remove="images\gameicons\Unknown_48.ico" />
    <None Remove="images\loadingspinner.png" />
    <None Remove="images\origin.png" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="costura64\lzo2wrapper.dll" />
    <EmbeddedResource Include="costura64\sevenzipwrapper.dll" />
    <EmbeddedResource Include="costura64\zlibwrapper.dll" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ByteSize" Version="1.3.0" />
    <PackageReference Include="CommandLineParser" Version="2.6.0" />
    <PackageReference Include="Flurl" Version="2.8.2" />
    <PackageReference Include="Flurl.Http" Version="2.4.2" />
    <PackageReference Include="Fody" Version="6.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="FontAwesome.WPF" Version="4.7.0.9" />
    <PackageReference Include="ini-parser" Version="2.5.2" />
    <PackageReference Include="Microsoft.AppCenter" Version="2.3.0-preview" />
    <PackageReference Include="Microsoft.AppCenter.Analytics" Version="2.3.0-preview" />
    <PackageReference Include="Microsoft.AppCenter.Crashes" Version="2.3.0-preview" />
    <PackageReference Include="MiqM.Xceed.Wpf.Toolkit.NETCore" Version="3.4.0.1" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="Octokit" Version="0.34.0" />
    <PackageReference Include="PropertyChanged.Fody" Version="3.1.3" />
    <PackageReference Include="Serilog" Version="2.8.0" />
    <PackageReference Include="Serilog.Sinks.Debug" Version="1.0.1" />
    <PackageReference Include="Serilog.Sinks.RollingFile.Extension" Version="2.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Gammtek.Conduit.Core\Gammtek.Conduit.Core.csproj" />
    <ProjectReference Include="..\Gibbed.IO\Gibbed.IO.csproj" />
    <ProjectReference Include="..\SevenZip\SevenZip.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="images\gameicons\ME1_48.ico" />
    <Resource Include="images\gameicons\ME2_48.ico" />
    <Resource Include="images\gameicons\ME3_48.ico" />
    <Resource Include="images\gameicons\Unknown_48.ico" />
    <Resource Include="images\loadingspinner.png" />
    <Resource Include="images\origin.png" />
  </ItemGroup>

</Project>